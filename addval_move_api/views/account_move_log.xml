<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="move_log_tree" model="ir.ui.view">
            <field name="name">move.log.tree</field>
            <field name="model">account.move.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string=""/>
                    <field name="partner_id" string="Contacto"/>
                    <field name="move_date" string="Fecha asiento"/>
                    <field name="inbound_type" string="Tipo ingreso"/>
                    <field name="move_description" string="Glosa"/>
                    <field name="amount_total" string="Monto total"/>
                    <field name="company_id" string="Compañía"/>
                </tree>
            </field>
        </record>

        <record id="move_log_form" model="ir.ui.view">
            <field name="name">move.log.form</field>
            <field name="model">account.move.log</field>
            <field name="arch" type="xml">
                <form string="LOG DE VENTA">
                    <header>
                        <button name="reprocess_move" type="object" data-hotkey="shift+g"
                                string="Re-procesar pago" class="oe_highlight"
                                invisible="state in ('done','not_done')"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done,not_done"/>
                    </header>
                    <sheet>     
                        <h1><field name="name" string=""/></h1>                   
                        <group>
                            <group>
                                <field name="partner_id" string="Contacto"/>
                                <field name="move_date" string="Fecha pago"/>
                                <field name="move_description" string="Glosa"/>
                                <field name="error_message" string="Mensaje"/>
                                <field name="state" string="Estado"/>
                            </group>
                            <group>                            
                                <field name="inbound_type" string="Tipo de ingreso"/>
                                <field name="amount_total" string="Monto total"/>
                                <field name="company_id" string="Compañía"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="move_log_act_window" model="ir.actions.act_window">
            <field name="name">Logs de asientos contables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay registros creados
                </p>
            </field>
        </record>

        <menuitem id="move_log_move_menu" name="Logs de asientos contables" action="move_log_act_window"
            parent="account.menu_account_config" sequence="50"/>
    </data>
</odoo>
