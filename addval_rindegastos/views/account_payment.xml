<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rindegastos_fields" model="ir.ui.view">
        <field name='name'>rindegastos.fields</field>
        <field name='model'>account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="rindegastos_expense_id" attrs="{'invisible': [('rindegastos_expense_id', '=', 0)]}"/>
                <field name="rindegastos_log_id" attrs="{'invisible': [('rindegastos_expense_id', '=', 0)]}"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <field name="rindegastos_state" widget="statusbar" statusbar_visible="approved,paid" attrs="{'invisible': [('rindegastos_expense_id', '=', 0)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
