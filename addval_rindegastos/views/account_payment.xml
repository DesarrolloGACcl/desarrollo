<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rindegastos_fields" model="ir.ui.view">
        <field name='name'>rindegastos.fields</field>
        <field name='model'>account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="rindegastos_expense_id" attrs="{'invisible': [('rindegastos_log_id', '=', False)]}" readonly="1"/>
                <field name="rindegastos_log_id" attrs="{'invisible': [('rindegastos_log_id', '=', False)]}" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="before">
                <field name="rindegastos_state" widget="statusbar" statusbar_visible="approved,paid" attrs="{'invisible': [('rindegastos_log_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="action_payment_is_reconciled" model="ir.actions.server">
        <field name="name">Procesar Log</field>
        <field name="model_id" ref="addval_rindegastos.model_account_payment"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.check_payment_is_paid()
        </field>
    </record>
</odoo>
