<odoo>
    <data>

        <record id="extra_fields_tree" model="ir.ui.view">
            <field name="name">extra.fields.tree</field>
            <field name="model">expense.extra.fields</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Nombre"/>
                    <field name="value" string="Valor"/>
                    <field name="code" string="Código"/>
                    <field name="expense_log_id" string="Gasto"/>
                    <field name="company_id" string="Compañía"/>
                </tree>
            </field>
        </record>

        <record id="extra_fields_form" model="ir.ui.view">
            <field name="name">extra.fields.form</field>
            <field name="model">expense.extra.fields</field>
            <field name="arch" type="xml">
                <form string="Campos extra">
                    <header>
                    </header>
                    <sheet>     
                        <h1><field name="name" string=""/></h1>                   
                        <group>
                            <group>
                                <field name="name" string="Nombre" readonly="1"/>
                                <field name="value" string="Valor" readonly="1"/>
                                <field name="code" string="Código" readonly="1"/>
                                <field name="expense_log_id" string="Gasto" readonly="1"/>
                            </group>
                            <group>                
                                <field name="company_id" string="Compañía" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="extra_fields_act_window" model="ir.actions.act_window">
            <field name="name">Campos extra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">expense.extra.fields</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay registros creados
                </p>
            </field>
        </record>

        <menuitem id="extra_fiedls_account_menu" name="Campos extra en gastos" action="extra_fields_act_window"
            parent="account.root_payment_menu" sequence="60"/>

    </data>
</odoo>