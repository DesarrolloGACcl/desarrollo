<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='default_accounts']" position="after">
                <h2>Configuraciones API</h2>
                <div class="row mt16 o_settings_container" name="api_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <h3>Pagos</h3>
                            <div>
                                <label
                                    string="Primera cuenta API"
                                    for="primary_account_id"/>
                                <div class="text-muted">
                                    Primera cuenta API
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="primary_account_id"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
                                </div>
                                <label
                                    string="Primera cuenta anticipo API"
                                    for="advance_primary_account_id"/>
                                <div class="text-muted">
                                    Primera cuenta anticipo API
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="advance_primary_account_id"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
