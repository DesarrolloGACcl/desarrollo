                                    for="move_default_journal_api"/>
                                <div class="text-muted">
                                    Diario API asientos contables
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="move_default_journal_api"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
