<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="expense_report_tree" model="ir.ui.view">
            <field name="name">expense.report.tree</field>
            <field name="model">rindegastos.expense.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string=""/>
                    <field name="report_title" string="Titulo"/>
                    <field name="partner_id" string="Rendidor"/>
                    <field name="approve_name" string="Aprobador"/>
                    <field name="fund_id" string="Fondo"/>
                    <field name="report_total" string="Total"/>
                    <field name="company_id" string="Compañía"/>
                </tree>
            </field>
        </record>

        <record id="expense_report_form" model="ir.ui.view">
            <field name="name">expense.report.form</field>
            <field name="model">rindegastos.expense.report</field>
            <field name="arch" type="xml">
                <form string="Informe de gasto">
                    <sheet>     
                        <h1><field name="name" string=""/></h1>                   
                        <group>
                            <group>
                                <field name="partner_id" string="Usuario rendidor" readonly="1"/>
                                <field name="expense_report_status" string="Estado del reporte" readonly="1"/>
                                <field name="report_id" string="ID del informe en Rindegastos" readonly="1"/>
                                <field name="report_title" string="Titulo" readonly="1"/>
                                <field name="report_number" string="Número del informe" readonly="1"/>
                                <field name="send_date" string="Fecha de envío" readonly="1"/>
                                <field name="close_date" string="Fecha de cierre" readonly="1"/>
                                <field name="employee_id" string="ID empleado" readonly="1"/>
                                <field name="employee_name" string="Nombre del empleado" readonly="1"/>
                                <field name="employee_identification" string="Identificación del empleado" readonly="1"/>
                                <field name="integrated" string="Integrado" readonly="1"/>
                                <field name="integration_date" string="Fecha de la integración" readonly="1"/>
                                <field name="integration_external_code" string="Código externo de la integración" readonly="1"/>
                                <field name="integration_internal_code" string="Código interno de la integración" readonly="1"/>
                            </group>
                            <group>                
                                <field name="approver_id" string="ID del aprobador" readonly="1"/>
                                <field name="approve_name" string="Nombre del aprobador" readonly="1"/>              
                                <field name="policy_id" string="ID política de gasto" readonly="1"/>
                                <field name="policy_name" string="Política de gasto" readonly="1"/>
                                <field name="custom_status" string="Estado customizado" readonly="1"/>
                                <field name="expense_report_fund_id" string="ID del fondo" readonly="1"/>
                                <field name="fund_name" string="Nombre del fondo" readonly="1"/>
                                <field name="report_total" string="Total" readonly="1"/>
                                <field name="report_total_approved" string="Total aprobado" readonly="1"/>
                                <field name="currency" string="Moneda" readonly="1"/>
                                <field name="expenses_qty" string="Cantidad de gastos" readonly="1"/>
                                <field name="approved_expenses_qty" string="Cantidad de gastos aprobados" readonly="1"/>
                                <field name="rejected_expenses_qty" string="Cantidad de gastos rechazados" readonly="1"/>
                                <field name="fund_id" string="Fondo" readonly="1"/>
                                <field name="note" string="Notas" readonly="1"/>
                                <field name="company_id" string="Compañía" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Campos extra" name="extra_field_ids">
                                <field name="report_extra_field_ids"
                                    widget="section_and_note_one2many"
                                    mode="tree">
                                    <form>
                                        <group>
                                            <field name="name" readonly="1"/>
                                            <field name="value" readonly="1"/>
                                            <field name="code" readonly="1"/>
                                            <field name="expense_report_log_id" readonly="1"/>
                                            <field name="company_id" readonly="1"/>
                                        </group>
                                    </form>
                                    <tree string="Campos extra">
                                        <field name="name"/>
                                        <field name="value"/>
                                        <field name="code"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Gastos" name="expense_ids">
                                <field name="report_expense_ids"
                                    widget="section_and_note_one2many"
                                    mode="tree">
                                    <form>
                                        <group>
                                            <field name="expense_user_name" readonly="1"/>
                                            <field name="expense_date" readonly="1"/>
                                            <field name="expense_partner" readonly="1"/>
                                            <field name="expense_total" readonly="1"/>
                                            <field name="state" readonly="1"/>
                                            <field name="company_id" readonly="1"/>
                                        </group>
                                    </form>
                                    <tree string="Gastos">
                                        <field name="name" string=""/>
                                        <field name="expense_user_name" string="Usuario rendidor"/>
                                        <field name="expense_date" string="Fecha"/>
                                        <field name="expense_partner" string="Proveedor"/>
                                        <field name="expense_total" string="Total"/>
                                        <field name="state" string="Estado"/>
                                        <field name="company_id" string="Compañía"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> 
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="expense_report_act_window" model="ir.actions.act_window">
            <field name="name">Informe de gastos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rindegastos.expense.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay registros creados
                </p>
            </field>
        </record>

        <menuitem id="expense_report_account_menu" name="Informe de gastos" action="expense_report_act_window"
            parent="account.root_payment_menu" sequence="50"/>

    </data>
</odoo>
