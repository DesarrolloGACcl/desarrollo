<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <div>
                            <label
                                string="Plan analítico para proyectos"
                                for="project_analytic_plan_id"/>
                            <div class="text-muted">
                                Plan analítico de proyectos 
                            </div>
                            <div class="content-group mt16">
                                <field
                                    name="project_analytic_plan_id"
                                    colspan="4"
                                    nolabel="1"
                                />
                            </div>
                            <label
                                string="Plan analítico para áreas"
                                for="area_analytic__plan_id"/>
                            <div class="text-muted">
                                Plan analítico de áreas
                            </div>
                            <div class="content-group mt16">
                                <field
                                    name="area_analytic__plan_id"
                                    colspan="4"
                                    nolabel="1"
                                />
                            </div>
                            <label
                                string="Plan analítico para actividades"
                                for="activity_analytic_plan_id"/>
                            <div class="text-muted">
                                Plan analítico de actividades
                            </div>
                            <div class="content-group mt16">
                                <field
                                    name="activity_analytic_plan_id"
                                    colspan="4"
                                    nolabel="1"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
