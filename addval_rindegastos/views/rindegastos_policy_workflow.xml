<odoo>
    <data>

        <record id="policy_workflow_tree" model="ir.ui.view">
            <field name="name">policy.workflow.tree</field>
            <field name="model">rindegastos.policy.workflow</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Nombre"/>
                    <field name="rg_level" readonly="1"/>
                    <field name="rg_approver_id" readonly="1"/>
                    <field name="rg_approver_name" readonly="1"/>
                    <field name="rg_approver_email" readonly="1"/>
                    <field name="rg_amount_restriction" readonly="1"/>
                    <field name="rg_restriction_report_amount" readonly="1"/>
                    <field name="rg_restriction_extra_approver_id" readonly="1"/>
                    <field name="rg_restriction_extra_approver_email" readonly="1"/>
                    <field name="approver_id" readonly="1"/>
                </tree>
            </field>
        </record>

        <record id="policy_workflow_form" model="ir.ui.view">
            <field name="name">policy.workflow.form</field>
            <field name="model">rindegastos.policy.workflow</field>
            <field name="arch" type="xml">
                <form string="Flujos de políticas">
                    <header>
                    </header>
                    <sheet>     
                        <h1><field name="name" string=""/></h1>                   
                        <group>
                            <group>
                                <field name="name" string="Nombre" readonly="1"/>
                                <field name="rg_level" readonly="1"/>
                                <field name="rg_approver_id" readonly="1"/>
                                <field name="rg_approver_name" readonly="1"/>
                                <field name="rg_approver_email" readonly="1"/>
                                <field name="rg_amount_restriction" readonly="1"/>
                                <field name="rg_restriction_report_amount" readonly="1"/>
                                <field name="rg_restriction_extra_approver_id" readonly="1"/>
                                <field name="rg_restriction_extra_approver_email" readonly="1"/>
                                <field name="approver_id" readonly="1"/>
                            </group>
                            <group>                
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="policy_workflow_act_window" model="ir.actions.act_window">
            <field name="name">Flujos de las políticas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rindegastos.policy.workflow</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay registros creados
                </p>
            </field>
        </record>

        <menuitem id="policy_workflow_account_menu" name="Flujos de políticas" action="policy_workflow_act_window"
            parent="account.root_payment_menu" sequence="60"/>

    </data>
</odoo>