<odoo>
    <!-- Herencia de purchase.report_purchaseorder -->
    <template id="report_purchaseorder_document_inherit"
        inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_description']" position="after">
            <th>
                <strong>Proyecto</strong>
            </th>
            <th>
                <strong>Área</strong>
            </th>
            <th>
                <strong>Actividad</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']" position="after">
            <td>
                <span t-field="line.analytic_distribution_view" />
            </td>
            <td>
                <span t-field="line.analytic_distribution_area_view" />
            </td>
            <td>
                <span t-field="line.analytic_distribution_activity_view" />
            </td>
        </xpath>
    </template>

    <!-- Herencia de purchase.report_purchasequotation -->
    <template id="report_purchasequotation_document_inherit"
        inherit_id="purchase.report_purchasequotation_document" priority="30">
        <xpath expr="//th[@name='th_description']" position="after">
            <th>
                <strong>Proyecto</strong>
            </th>
            <th>
                <strong>Área</strong>
            </th>
            <th>
                <strong>Actividad</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']" position="after">
            <td>
                <span t-field="order_line.analytic_distribution_view" />
            </td>
            <td>
                <span t-field="order_line.analytic_distribution_area_view" />
            </td>
            <td>
                <span t-field="order_line.analytic_distribution_activity_view" />
            </td>
        </xpath>
    </template>
</odoo> 
