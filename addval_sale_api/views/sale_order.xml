<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_api_fields">
        <field name='name'>sale.order.api.fields</field>
        <field name='model'>sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <field name="payment_term_id" position="after">
                <field name="payment_method" string="Método de pago"/>
                <field name="dues_qty" string="Cantidad de cuotas"/>
                <field name="card_type" string="Tipo de tarjeta"/>
                <field name="authorization_code" string="Código único transacción"/>
            </field>
            <field name="partner_shipping_id" position="after">
                <field name="channel_sale" string="Canal de venta"/>
                <field name="invoice_document_type" string="Tipo de documento"/>
                <field name="pre_invoice" string="Pre-factura"/>
            </field>
        </field>
    </record>
</odoo>
