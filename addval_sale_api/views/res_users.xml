<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_user_check_warning_logs" model="ir.ui.view">
        <field name='name'>res.users.check.warning.log</field>
        <field name='model'>res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <xpath expr="//page[@name='preferences']/group[1]" position="inside">
                <group name="notifications" string="Notificaciones">
                    <field name="receive_warning_mail"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
