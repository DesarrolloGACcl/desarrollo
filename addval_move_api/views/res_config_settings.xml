                                <label
                                    string="Cuenta anticipo API"
                                    for="advance_account_id"/>
                                <div class="text-muted">
                                    Cuenta anticipo API
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="advance_account_id"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
                                </div>
                                <label
                                    string="Cuenta diferencia minima API"
                                    for="difference_account_id"/>
                                <div class="text-muted">
                                    Cuenta diferencia minima API
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="difference_account_id"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
                                </div>
                                <label
                                    string="Diario pagos API"
                                    for="journal_api_id"/>
                                <div class="text-muted">
                                    Diario pagos API
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="journal_api_id"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
                                </div>
                                <label
                                    string="Diferencia permitida"
                                    for="allowed_difference"/>
                                <div class="text-muted">
                                    Diferencia permitida
                                </div>
                                <div class="content-group mt16">
                                    <field
                                        name="allowed_difference"
                                        colspan="4"
                                        nolabel="1"
                                        options="{'no_create': True, 'no_create_edit':True}"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <h3>Asientos contables</h3>
                            <div>
                                <label
                                    string="Primera cuenta API"
                                    for="move_primary_account_api"/>
                                <div class="text-muted">
